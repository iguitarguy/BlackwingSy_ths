<Connected>:
    GridLayout:
        orientation: 'vertical'
        cols: 2

        Label:
            text: 'You are now connected'
            font_size: 32

        Button:
            text: 'Disconnect'
            font_size: 32

            on_press: root.disconnect(), root.clear()

        Label:
            text: 'Send us a message'
            font_size: 18

        TextInput:
            id: message
            multiline: True
            font_size: 24

        Label:
            id: crypt
            font_size: 18

        Button:
            text: 'Encrypt'
            font_size: 28

            on_press: root.encrypt(message.text), root.resetForm()